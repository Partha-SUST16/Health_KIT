<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:id="@+id/drawerLayoutId"
    tools:context=".DoctorLogin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fbfdfd"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="50dp"
            >
            <ImageView
                android:layout_height="180dp"
                android:layout_width="180dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/health_kit_logo"
                />

            <EditText
                android:id="@+id/doctorEmailId"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:hint="  Email"
                android:drawableLeft="@drawable/ic_account_circle_coloured_24dp"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:background="@drawable/button_background2"

                />
            <EditText
                android:id="@+id/doctorPasswordId"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="  Password"
                android:drawableLeft="@drawable/ic_lock_outline_coloured_24dp"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:background="@drawable/button_background2"
                />


            <Button
                android:id="@+id/loginBtnId"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/button_background"
                android:text="Login"
                android:textColor="#ffffff"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:background="@null"
                android:text="Forgot your password?"
                android:textAllCaps="false"

                />
            <Button
                android:id="@+id/signupBtnId"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:background="@null"
                android:text="Don't have an account?"
                android:textAllCaps="false"
                />
        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/NavigationViewId"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/nevigation_menu"
        android:background="@color/colorPrimary"
        >

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>